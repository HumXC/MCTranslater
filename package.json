{
    "name": "mctranslator",
    "publisher": "HumXC",
    "author": {
        "name": "HumXC",
        "email": "Hum-XC@outlook.com",
        "url": "https://github.com/HumXC"
    },
    "icon": "icon.png",
    "displayName": "MCTranslator",
    "repository": "https://github.com/HumXC/MCTranslator",
    "description": "通过机翻协助诸如 Minecraft mod 等语言文件的翻译",
    "version": "0.0.5",
    "engines": {
        "vscode": "^1.67.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:mctranslator.openFile"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "MCTranslator",
            "properties": {
                "mctranslator.百度翻译_AppID": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "百度翻译的APPID, 请前往 '百度翻译开放平台' 获取。"
                },
                "mctranslator.百度翻译_SecretKey": {
                    "scope": "resource",
                    "type": "string",
                    "default": "",
                    "description": "百度翻译的密钥, 请前往 '百度翻译开放平台' 获取。"
                },
                "mctranslator.百度翻译_高级版API": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": "",
                    "description": "百度翻译API的版本, false 为标准版, true 为高级版。"
                },
                "mctranslator.自动翻译": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": "true",
                    "description": "启动时自动翻译成中文, 如果需要翻译成其他语言建议取消勾选"
                }
            }
        },
        "commands": [
            {
                "command": "mctranslator.openFile",
                "title": "翻译语言文件"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "mctranslator.openFile",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "mctranslator.openFile",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.67.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "14.x",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "eslint": "^8.14.0",
        "glob": "^8.0.1",
        "mocha": "^9.2.2",
        "typescript": "^4.6.4",
        "ts-loader": "^9.2.8",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2",
        "@vscode/test-electron": "^2.1.3"
    }
}
